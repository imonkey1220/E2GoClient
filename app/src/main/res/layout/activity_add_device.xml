<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tw.imonkey.e2goclient.AddDeviceActivity">

    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="495dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:weightSum="1"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <EditText
            android:id="@+id/editTextAddCompanyId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/input_companyId" />

        <EditText
            android:id="@+id/editTextAddDevice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/input_device"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextAddDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/input_Device_Desc"
            android:inputType="textMultiLine|textPersonName" />


        <ImageView
            android:id="@+id/imageViewAddDevice"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="0.35"
            android:contentDescription="@string/Device_Photo"
            android:onClick="choosePhoto"
            app:srcCompat="@android:drawable/ic_menu_gallery" />

        <Button
            android:id="@+id/buttonOK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_bright"
            android:elevation="10dp"
            android:onClick="addDevice"
            android:text="OK"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
